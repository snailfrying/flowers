# Flowers Backend Configuration
# Copy this file to env.yaml and fill in your actual values
# DO NOT commit env.yaml to version control!

# Ollama Configuration (for local LLM)
ollama_base_url=http://localhost:11434
ollama_vlm_model=qwen2.5vl:7b
ollama_llm_model=qwen2.5:7b-instruct
ollama_embedding_model=text-embedding-model:latest

# Application Language
APP_LANG=zh

# DashScope (Aliyun) Configuration
# Get your API key from: https://dashscope.console.aliyun.com/
DASHSCOPE_API_KEY=your-dashscope-api-key-here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
DASHSCOPE_EMBEDDING_MODEL=text-embedding-v1
DASHSCOPE_LLM_MODEL=qwen-turbo
DASHSCOPE_VLM_MODEL=qwen3-vl-plus

# Optional: Other Provider Configurations
# Uncomment and configure as needed

